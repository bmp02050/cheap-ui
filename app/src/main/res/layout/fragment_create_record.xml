<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- creating an image view for displaying image-->
    <ImageView
        android:id="@+id/idIVImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="3dp" />

    <!-- Take Photo Button -->

    <!-- Description Field -->

    <Button
        android:id="@+id/btnTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idIVImage"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"
        android:background="#204668"
        android:text="Take Photo" />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnTakePhoto"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:hint="Description"
        android:inputType="text" />

    <!-- Price Field -->
    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextDescription"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:hint="Price"
        android:inputType="numberDecimal" />

    <!-- Unit Price Field -->
    <EditText
        android:id="@+id/editTextUnitPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPrice"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:hint="Unit Price"
        android:inputType="numberDecimal" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@id/idIVImage"
        android:layout_toEndOf="@+id/btnTakePhoto"
        android:background="#204668"
        android:text="Save" />

</RelativeLayout>
